include ../slider/slider.pug
include ../config-panel/config-panel.pug

mixin demo-panel(options={})
    -
        const {
            id = "",
            slider = {},
        } = options;

    .demo-panel.js-demo-panel(id=id)
        .demo-panel__slider
            +slider(slider)
        .demo-panel__config-panel
            +config-panel({
                id,
            })
